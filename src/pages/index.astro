---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { Image } from 'astro:assets';
import illustrationImage from "../../public/rocket.png";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="text">
				<h1>Maintenance Mode</h1>
				<p>We are adding new features, the app will be operational really soon!</p>
			</div>
			<Image src={illustrationImage} alt={"Illustration of a rocket"} width={500}/>
		</main>
		<Footer />
	</body>
	<style>
		main {
			width: max-content;
			display: flex;
			flex-direction: column;
			align-items: center;
		}
		h1 {
			color: var(--white-light)
		}
		.text {
			text-align: center;
		}
	</style>
</html>
